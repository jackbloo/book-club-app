{
  "name": "bookclub-backend",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "build": "tsc -p .",
    "start": "node dist/index.js",
    "prisma:generate": "prisma generate --schema=src/prisma/schema.prisma",
    "prisma:migrate": "prisma migrate dev --schema=src/prisma/schema.prisma --name init",
    "prisma:deploy": "prisma migrate deploy --schema=src/prisma/schema.prisma",
    "seed": "prisma db seed --schema=src/prisma/schema.prisma"
  },
  "prisma": {
    "seed": "ts-node src/prisma/seed.ts"
  },
  "dependencies": {
    "@fastify/cors": "^9.0.1",
    "@prisma/client": "^5.1.1",
    "fastify": "^4.24.0",
    "zod": "^3.22.2"
  },
  "devDependencies": {
    "prisma": "^5.1.1",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.2.2"
  }
}
